@model WareHouseManger.Models.EF.Customer

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow container col-6">
    <div class="card-body">
        <h1>Xóa</h1>
        <h3>Bạn có chắc muốn xóa?</h3>
        <h4>Khách hàng</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Tên khách hàng</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CustomerCategoryID" class="control-label">Loại khách hàng</label>
            <input class="form-control" value="@Model.CustomerCategory.Name" readonly />
            <span asp-validation-for="CustomerCategoryID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" readonly />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control" readonly />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EMail" class="control-label"></label>
            <input asp-for="EMail" class="form-control" readonly />
            <span asp-validation-for="EMail" class="text-danger"></span>
        </div>
        <div class="panel-footer text-right">
            <form asp-action="Delete">
                <input type="hidden" asp-for="CustomerID" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-light" asp-action="Index">Quay lại</a>
            </form>
        </div>
    </div>
</div>


