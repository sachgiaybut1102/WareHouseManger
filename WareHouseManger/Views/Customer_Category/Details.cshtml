@model WareHouseManger.Models.EF.Customer_Category

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Chi tiết</h1>
            <h4>Loại khách hàng</h4>
            <hr />
            <div class="panel panel-default ">
                <div class="panel-heading">Thông tin loại khách hàng</div>
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên loại</label>
                        <input asp-for="Name" class="form-control" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Remark" class="control-label">Ghi chú</label>
                        <input asp-for="Remark" class="form-control" />
                        <span asp-validation-for="Remark" class="text-danger"></span>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CustomerCategoryID">Chỉnh sửa</a>
                    <a class="btn btn-default" asp-action="Index">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>

