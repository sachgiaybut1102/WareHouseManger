@model WareHouseManger.Models.EF.Shop_Goods_Category

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow container col-6">
    <div class="card-body">
        <h1>Chi tiết</h1>
        <h4>Loại hàng hóa</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Tên loại hàng hóa</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SortName" class="control-label">Tên viết tắt</label>
            <input asp-for="SortName" class="form-control" readonly />
            <span asp-validation-for="SortName" class="text-danger"></span>
        </div>
        <div class="panel-footer text-right">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CategoryID">Chỉnh sửa</a>
            <a class="btn btn-light" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>

