@model WareHouseManger.Models.EF.Shop_Goods_Category

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Chi tiết</h1>
            <h4>Loại hàng hóa</h4>
            <hr />
            <div class="panel panel-default ">
                <div class="panel-heading">Thông tin loại hàng hóa</div>
                <div class="panel-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Tên loại hàng hóa</label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SortName" class="control-label">Tên viết tắt</label>
                        <input asp-for="SortName" class="form-control" readonly />
                        <span asp-validation-for="SortName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    </div>

                </div>
                <div class="panel-footer text-right">
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CategoryID">Chỉnh sửa</a>
                    <a class="btn btn-default" asp-action="Index">Quay lại</a>
                </div>
            </div>
        </div>
    </div>
</div>

