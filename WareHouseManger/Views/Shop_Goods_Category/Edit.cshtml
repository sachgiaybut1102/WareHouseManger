@model WareHouseManger.Models.EF.Shop_Goods_Category

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1>Chỉnh sửa</h1>
            <h4>Loại hàng hóa</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryID" />
                <div class="panel panel-default ">
                    <div class="panel-heading">Thông tin loại hàng hóa</div>
                    <div class="panel-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên loại hàng hóa</label>
                            <input asp-for="Name" class="form-control" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SortName" class="control-label">Tên viết tắt</label>
                            <input asp-for="SortName" class="form-control" />
                            <span asp-validation-for="SortName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="panel-footer text-right">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <a class="btn btn-default" asp-action="Index">Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
