@model WareHouseManger.Models.EF.Shop_Goods_SubCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow container col-7">
    <div class="card-body">
        <h1>Thêm mới danh mục cấp 2</h1>
        <h4>Danh mục cha: @ViewBag.ParentName</h4>
        <hr />
        <form asp-action="CreateSubCate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CategoryParentID" type="hidden" value="@ViewBag.ParentId" class="form-control" />
            <div class="form-group">
                <label asp-for="SubCategoriName" class="control-label"></label>
                <input asp-for="SubCategoriName" class="form-control" />
                <span asp-validation-for="SubCategoriName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategoriDescription" class="control-label"></label>
                <input asp-for="SortName" class="form-control" />
                <span asp-validation-for="SortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubCategoriDescription" class="control-label"></label>
                <input asp-for="SubCategoriDescription" class="form-control" />
                <span asp-validation-for="SubCategoriDescription" class="text-danger"></span>
            </div>
             <div class="panel-footer text-right">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a class="btn btn-light" asp-action="Index">Quay lại</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
