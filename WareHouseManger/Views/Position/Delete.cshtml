@model WareHouseManger.Models.EF.Position

@{
    ViewData["Title"] = "Delete";
}
<div class="card shadow container col-6">
    <div class="card-body">
        <h1>Xóa</h1>
        <h3>Bạn có chắc muốn xóa?</h3>
        <h4>Chức vụ</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label font-weight-bold">Tên chức vụ</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Remark" class="control-label font-weight-bold">Ghi chú</label>
            <input asp-for="Remark" class="form-control" readonly />
            <span asp-validation-for="Remark" class="text-danger"></span>
        </div>
        <div class="panel-footer text-right">
            <form asp-action="Delete">
                <input type="hidden" asp-for="PositionID" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-default" asp-action="Index">Quay lại</a>
            </form>
        </div>
    </div>
</div>
