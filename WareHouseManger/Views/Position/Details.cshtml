@model WareHouseManger.Models.EF.Position

@{
    ViewData["Title"] = "Details";
}

<div class="card shadow container col-6">
    <div class="card-body">
        <h1>Chi tiết</h1>
        <h4>Chức vụ</h4>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label font-weight-bold">Tên chức vụ</label>
            <input asp-for="Name" class="form-control" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Remark" class="control-label font-weight-bold">Ghi chú</label>
            <input asp-for="Remark" class="form-control" readonly />
            <span asp-validation-for="Remark" class="text-danger"></span>
        </div>
        <div class="panel-footer text-right">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.PositionID">Chỉnh sửa</a>
            <a class="btn btn-default" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>

