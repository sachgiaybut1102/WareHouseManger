@model WareHouseManger.Models.EF.Shop_Goods_Issue

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow container col-6">
    <div class="card-body">
        <h1>Xóa</h1>

        <h3>Bạn có chác muốn xóa?</h3>
        <div>
            <h4>Hóa đơn nhập</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Ngày nhập
                </dt>
                <dd class="col-sm-10">
                    @Model.DateCreated.Value.ToString("dd/MM/yyyy")
                </dd>
                <dt class="col-sm-2">
                    Nhân viên
                </dt>
                <dd class="col-sm-10">
                    @Model.Employee.Name
                </dd>
                <dt class="col-sm-2">
                    Khách hàng
                </dt>
                <dd class="col-sm-10">
                    @Model.Customer.Name
                </dd>
                <dt class="col-sm-2">
                    Tổng tiền
                </dt>
                <dd class="col-sm-10">
                    @string.Format("{0:N}", Model.Total)
                </dd>
                <dt class="col-sm-2">
                    Ghi chú
                </dt>
                <dd class="col-sm-10">
                    @Model.Remark
                </dd>
            </dl>
            <hr />
            <form asp-action="Delete">
                <input type="hidden" asp-for="GoodsIssueID" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-light" asp-action="Index">Quay lại</a>
            </form>
        </div>
    </div>
</div>
