@model IEnumerable<WareHouseManger.Models.EF.Shop_Goods_Issue>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow">
    <div class="card-body">
        <h1>Phiếu nhập xuất</h1>
        <p>
            <a class="btn btn-sm btn-success" asp-action="Create"><i class="fa fa-plus-circle"> Thêm mới</i></a>
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            Số PX
                        </th>
                        <th class="text-center">
                            Ngày lập
                        </th>
                        <th>
                            Tên khách hàng
                        </th>
                        <th>
                            Nhân viên lập
                        </th>
                        <th class="text-right">
                            Tổng tiền
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.GoodsIssueID
                            </td>
                            <td class="text-center">
                                @item.DateCreated.Value.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.Name)
                            </td>
                            <td class="text-right">
                                @string.Format("{0:N}", item.Total)
                            </td>
                            <td class="text-nowrap text-center" width="150px">
                                @*<a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.GoodsReceiptID"> <i class="fa fa-edit"> Chỉnh sửa</i></a>*@
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.GoodsIssueID"><i class="fa fa-file"> Chi tiết</i></a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.GoodsIssueID"><i class="fa fa-trash-o"> Xóa</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>