<div class="card shadow">
    <div class="card-body">
        <h1>Bàn làm việc</h1>
        <div class="form-group">
            <div class="card shadow">
                <div class="card-body">
                    <h2>Thống kê chi tiết</h2>
                    <div class="form-row align-items-center mb-3">
                        <div class="col-auto">
                            <span class="font-weight-bold">Từ:</span>
                        </div>
                        <div class="col-auto">
                            <input id="date-start" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-auto">
                            <span class="font-weight-bold">Đến:</span>
                        </div>
                        <div class="col-auto">
                            <div class="input-group">
                                <input id="date-end" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="col-auto">
                            <button id="btn-submit0" type="button" class="btn btn-primary">Xem thống kê</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Số đơn nhập
                                            </div>
                                            <div id="countReceipt" class="h5 mb-0 font-weight-bold text-gray-800"></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Số đơn xuât
                                            </div>
                                            <div id="countIssues" class="h5 mb-0 font-weight-bold text-gray-800"></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Doanh thu
                                            </div>
                                            <div id="revenue" class="h5 mb-0 font-weight-bold text-gray-800"></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Chi phí
                                            </div>
                                            <div id="cost" class="h5 mb-0 font-weight-bold text-gray-800"></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Lợi nhuận
                                            </div>
                                            <div id="profit" class="h5 mb-0 font-weight-bold text-gray-800"></div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="label-primary">Biểu đồ thống kê</h3>
            </div>
            <div class="card-body">

                <div class="form-row align-items-center mb-3">
                    <div class="col-auto">
                        <span class="font-weight-bold">Thống kê theo</span>
                    </div>
                    <div class="col-auto">
                        <select id="datetype" class="form-control">
                            <option value="month">Tháng</option>
                            <option value="year">Năm</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <span class="font-weight-bold">Tháng</span>
                    </div>
                    <div class="col-auto">
                        <select id="month" class="form-control">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-auto">
                        <span class="font-weight-bold">Năm</span>
                    </div>
                    <div class="col-auto">
                        <select id="year" class="form-control">
                            @for (int i = DateTime.Now.Year; i >= 1990; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-auto">
                        <button id="btn-submit-chart" class="btn btn-primary">Xem thống kê</button>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="card shadow">
                    <div class="card-header">
                        <h4>Biểu đồ doanh thu</h4>
                    </div>

                    <div class="card-body">
                        <div class="chart-area">
                            <canvas id="myAreaChart"></canvas>
                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>

            <!-- /.panel-body -->
        </div>
        <div class="card mt-3">
            <div class="card-body">
                <h3>Danh sách sản phẩm theo doanh thu</h3>
                <!-- /.panel-heading -->

                <div class="table-responsive">
                    <table id="tb-rank-shopgoods" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th class="text-center">Đơn vị tính</th>
                                <th class="text-right">Số lượng đã bán</th>
                                <th class="text-right">Doanh thu(VNĐ)</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <!-- /.col-lg-8 (nested) -->
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/fomatnumber.js"></script>
    <script src="~/js/plugins/morris/raphael-2.1.0.min.js"></script>
    <script src="~/js/plugins/morris/morris.js"></script>
    <script src="/vendor/chart.js/Chart.min.js"></script>
    <script src="~/js/Home/index.js"></script>
}
